{
    "title": "Grouping",
    "description": "Grouping of objects aka shopping cart.",
    "comment": "This object gets connected with user objects.",
    "id": "/profiles/grouping.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "name"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/shared_status" },
        { "$ref": "mixins.json#/uuid" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "name": {
            "title": "Name",
            "description": "The name of the quality metric",
            "type": "string"
        },
        "grouped_items": {
            "title": "Grouped items",
            "description": "Tracks all items in the group by UUID",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "title": "Grouped item",
                "description": "UUID of one item in the group",
                "type":  "string",
                "format": "uuid"
            }
        },
        "owner": {
            "title": "Owner",
            "description": "User that owns this grouping",
            "type": "string",
            "linkTo": "User"
        }
    }
}
